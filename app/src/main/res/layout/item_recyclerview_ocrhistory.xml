<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@drawable/cleaner_card_bg_selector"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
>

    <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
    />

    <RelativeLayout
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

        <RelativeLayout
                android:background="@color/c_ccffffff"
                android:id="@+id/rl_item_name_size"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                        android:id="@+id/tv_item_size_wh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="1.2M / 800*400px"
                        android:textColor="@color/c_cc000000"
                        android:textSize="13dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"

                />
                <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcdefghijkl.jpg"
                        android:textSize="10dp"
                        android:textColor="@color/c_66000000"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"

                />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
                android:layout_below="@id/rl_item_name_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <include layout="@layout/toolbar_show_image"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>